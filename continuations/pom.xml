<project>
    <modelVersion>4.0.0</modelVersion>
    <groupId>loom-playground</groupId>
    <artifactId>continuations</artifactId>
    <version>1.0</version>
    <properties>
<!--        <maven.compiler.release>19</maven.compiler.release>-->
        <maven.compiler.source>19</maven.compiler.source>
        <maven.compiler.target>19</maven.compiler.target>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.10.1</version>
                <configuration>
                    <enablePreview>true</enablePreview>
                    <compilerArgs>
                        <compilerArg>--add-exports</compilerArg>
                        <compilerArg>java.base/jdk.internal.vm=ALL-UNNAMED</compilerArg>
                        <compilerArg>--add-modules</compilerArg>
                        <compilerArg>jdk.incubator.concurrent</compilerArg>
                        <compilerArg>--add-opens</compilerArg>
                        <compilerArg>java.base/jdk.internal.vm=ALL-UNNAMED</compilerArg>
                    </compilerArgs>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
